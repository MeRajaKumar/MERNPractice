<%- include('../partials/header', { title: 'Employee Dashboard' }) %>

<h2 class="mb-3">Employees List</h2>
<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Department</th>
      <th>Salary</th>
    </tr>
  </thead>
  <tbody>
    <% if (employees) { %>
      <% employees.forEach(emp => { %>
        <tr>
          <td><%= emp.name %></td>
          <td><%= emp.email %></td>
          <td><%= emp.role %></td>
          <td><%= emp.department %></td>
          <td>$<%= emp.salary %></td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>

<h3 class="mt-4">Add Employee</h3>
<form method="POST" action="/employees" class="row g-3">
  <div class="col-md-4">
    <input type="text" class="form-control" name="name" placeholder="Name" required>
  </div>
  <div class="col-md-4">
    <input type="email" class="form-control" name="email" placeholder="Email" required>
  </div>
  <div class="col-md-4">
    <input type="text" class="form-control" name="role" placeholder="Role">
  </div>
  <div class="col-md-4">
    <input type="text" class="form-control" name="department" placeholder="Department">
  </div>
  <div class="col-md-4">
    <input type="number" class="form-control" name="salary" placeholder="Salary">
  </div>
  <div class="col-md-4">
    <button class="btn btn-success w-100">Add Employee</button>
  </div>
</form>

<%- include('../partials/footer') %>
